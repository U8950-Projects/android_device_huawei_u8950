 libs/gui/Android.mk                                |  4 +++
 services/surfaceflinger/Android.mk                 |  4 +++
 services/surfaceflinger/Layer.cpp                  |  5 ++++
 .../RenderEngine/GLES11RenderEngine.cpp            |  6 ++++
 services/surfaceflinger/SurfaceFlingerConsumer.cpp | 33 ++++++++++++++++++++++
